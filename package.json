{
  "name": "bun-plugin-gleam",
  "description": "Gleam plugin to bun runtime.",
  "version": "0.1.2",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "bunup --watch",
    "build": "bun run type-check && bunup",
    "compile": "bunup",
    "type-check": "tsc --noEmit"
  },
  "author": {
    "name": "@gleam-br",
    "email": "contato@gleam.dev.br"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "bun",
    "bunup",
    "gleam",
    "javascript",
    "bun-plugin",
    "bunup-plugin",
    "vite-plugin"
  ],
  "repository": {
    "url": "git+https://github.com/gleam-br/bun-plugin-gleam.git"
  },
  "bugs": {
    "url": "https://github.com/gleam-br/bun-plugin-gleam/issues"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "bunup": "^0.15.14",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}